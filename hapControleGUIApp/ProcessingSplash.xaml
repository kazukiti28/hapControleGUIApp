<Window x:Class="hapControlGUIApp.ProcessingSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hapControlGUIApp"
        mc:Ignorable="d"
        Title="ProcessingSplash"
        Width="300"
        Height="110"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <ProgressBar x:Name="progressbar"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Stretch"
                     Height="20"
                     Margin="20,10,24,1"
                     Width="250"
                     IsIndeterminate="True" Grid.Row="1" />
        <Label x:Name="label_status"
                HorizontalAlignment="Center" Margin="17,8,267,2"
                />
        <Label x:Name="label" Content="{Binding}" HorizontalAlignment="Left" Margin="32,3,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
